<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" 
      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html">

<h:head>
</h:head>
<h:body>

	<ui:composition template="/pages/common/template.xhtml">
	
	<ui:define name="css_content">
		<h:outputStylesheet library="css/#{view.locale}" name="login.css" />
	</ui:define>
	
	<ui:define name="body_content">	
		<div class="body-container">
			<div class="content-container">
				<form method="post" action="j_security_check" class="login-form">
						<input id="j_username" name="j_username" type="text" size="20" placeholder="your username" autocomplete="off" class="login-input" />
						<input id="j_password" name="j_password" type="password" size="20" placeholder="your password" autocomplete="off" class="login-input" />
						<h:commandButton type="submit" value="Login" styleClass="green-button" />
				</form>
				<h1 class="heading">Family System</h1>
			</div>
		</div>
	</ui:define>
	</ui:composition>

</h:body>


</html>